// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Artist {
  id          String         @id @default(cuid())
  name        String
  description String
  imageUrl    String?
  hoverVideoUrl String? // Canvas-style video (MP4)
  order       Int     @default(0)
  bookingImageUrl String?
  availabilities Availability[]
  bookings    Booking[]
}

model Availability {
  id        String   @id @default(cuid())
  date      DateTime
  isAvailable Boolean @default(true)
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  
  @@unique([artistId, date])
}

model Booking {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  artistId    String
  artist      Artist   @relation(fields: [artistId], references: [id])
  
  // Booking Details
  date        DateTime
  hours       Int
  city        String
  state       String
  clientName  String
  clientEmail String?
  cellphone   String
  hasWhatsapp Boolean @default(false)
  
  // New Fields
  bookingType String? @default("personal") // "personal" or "business"
  venue       String? // Venue name if business

  status      String   @default("PENDING") // PENDING, CONFIRMED, REJECTED
}
